<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="expandCollapse">

        <TextView
            android:text="@string/phone_details"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="@dimen/header_top_padding"
            android:paddingBottom="@dimen/header_top_padding"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/phone_details"
        android:visibility="gone"
        android:paddingTop="@dimen/header_top_padding"
        android:paddingLeft="@dimen/header_left_right_padding"
        android:paddingRight="@dimen/header_left_right_padding"
        android:paddingBottom="@dimen/header_top_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="expandCollapse">

        <TableRow android:background="@drawable/border_thin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brand_model"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/name_value_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brandModel"
                    android:textIsSelectable="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <Space android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/os_version"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/name_value_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/version"
                    android:textIsSelectable="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msisdn"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/name_value_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/msisdn"
                    android:textIsSelectable="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <Space android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imei"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/name_value_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imei"
                    android:textIsSelectable="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imsi"
                    android:textStyle="bold"
                    android:paddingRight="@dimen/name_value_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imsi"
                    android:textIsSelectable="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
